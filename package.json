{
  "name": "lector-nfc-android",
  "version": "2.0.0",
  "description": "Lector NFC - Aplicaci√≥n Android",
  "main": "index.js",
  "scripts": {
    "build": "echo 'Copiando archivos...' && npm run copy",
    "copy": "mkdir -p www && cp ../*.html www/ && cp ../*.js www/ && cp ../*.json www/ && cp ../manifest.json www/",
    "android:build": "cap sync && cd android && ./gradlew assembleRelease",
    "android:build-debug": "cap sync && cd android && ./gradlew assembleDebug",
    "setup": "npm install && npx cap add android && npm run copy && npx cap sync"
  },
  "keywords": ["nfc", "android", "lector"],
  "author": "Lector NFC Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/cli": "^5.5.1"
  }
}
